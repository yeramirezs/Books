<h1>Listing books</h1>

<table#books>
  <tr>
    <th>Name</th>
    <th>Author</th>
    <th>Isbn</th>
    <th>Totalranking</th>
    <th>Numberranking</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= book.author %></td>
    <td><%= book.isbn %></td>
    <td><%= book.totalRanking %></td>
    <td><%= book.numberRanking %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Book', new_book_path %>
